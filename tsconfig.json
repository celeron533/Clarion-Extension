{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"module": "NodeNext",          // Updated to NodeNext for better subpath support
		"target": "ESNext",
		"moduleResolution": "NodeNext", // Updated to NodeNext for better subpath support
		"esModuleInterop": true,
		"resolveJsonModule": true,      // Added to support JSON imports
		"allowSyntheticDefaultImports": true, // Added for compatibility
		"lib": ["ESNext"],
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"types": ["node", "@types/vscode"]  // Added node types explicitly
	},
	"include": [
		"src"
	],
	"exclude": [ 
		"node_modules",
		"**/node_modules/*",
		"vscode-test"
	],
	"references": [
		{"path": "client" },
		{"path": "server"}
	]
}
